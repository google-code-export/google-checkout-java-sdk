<checkout-config>
  <merchant-info>
    <merchant-id>812318588721976</merchant-id>
    <merchant-key>c1YAeK6wMizfJ6BmZJG9Fg</merchant-key>
    <env>Sandbox</env>
    <currency-code>USD</currency-code>
    <sandbox-root>
      https://sandbox.google.com/checkout/cws/v2/Merchant
    </sandbox-root>
    <production-root>
      https://checkout.google.com/cws/v2/Merchant
    </production-root>
    <checkout-suffix>checkout</checkout-suffix>
    <merchant-checkout-suffix>merchantCheckout</merchant-checkout-suffix>
    <request-suffix>request</request-suffix>
  </merchant-info>
  
  <notification-handlers>
    <notification-handler>
      <message-type>
        new-order-notification
      </message-type>
      <handler-class>
        com.google.checkout.handlers.NewOrderNotificationHandler
      </handler-class>    
    </notification-handler>
    <notification-handler>
      <message-type>
        risk-information-notification
      </message-type>
      <handler-class>
        com.google.checkout.handlers.RiskInformationNotificationHandler
      </handler-class>    
    </notification-handler>
    <notification-handler>
      <message-type>
        order-state-change-notification
      </message-type>
      <handler-class>
        com.google.checkout.handlers.OrderStateChangeNotificationHandler
      </handler-class>    
    </notification-handler>
    <notification-handler>
      <message-type>
        charge-amount-notification
      </message-type>
      <handler-class>
        com.google.checkout.handlers.ChargeAmountNotificationHandler
      </handler-class>    
    </notification-handler>
    <notification-handler>
      <message-type>
        refund-amount-notification
      </message-type>
      <handler-class>
        com.google.checkout.handlers.RefundAmountNotificationHandler
      </handler-class>    
    </notification-handler>
    <notification-handler>
      <message-type>
        chargeback-amount-notification
      </message-type>
      <handler-class>
        com.google.checkout.handlers.ChargebackAmountNotificationHandler
      </handler-class>    
    </notification-handler>
    <notification-handler>
      <message-type>
        authorization-amount-notification
      </message-type>
      <handler-class>
        com.google.checkout.handlers.AuthorizationAmountNotificationHandler
      </handler-class>    
    </notification-handler>
  </notification-handlers>
  <callback-handlers>
    <callback-handler>
      <message-type>
        merchant-calculation-callback
      </message-type>
      <handler-class>
        com.google.checkout.handlers.MerchantCalculationCallbackHandler
      </handler-class>    
    </callback-handler>
  </callback-handlers>
</checkout-config>
