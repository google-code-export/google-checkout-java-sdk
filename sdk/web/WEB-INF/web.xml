<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- 
    Place this XML fragment in the web.xml to configure checkout notification servlets 
    Author: Inderjeet Singh (inder@google.com)
  -->


  <!-- Begin: Configuration for Google checkout message processing -->
  <servlet>
    <description>
      Servlet that receives notifications for Google Checkout
    </description>
    <display-name>CheckoutNotificationServlet</display-name>
    <servlet-name>CheckoutNotificationServlet</servlet-name>
    <servlet-class>
      com.google.checkout.web.CheckoutMessageHandlerServlet
    </servlet-class>
    <init-param>
      <param-name>handler-type</param-name>
      <param-value>notification-handler</param-value>
    </init-param>
    <load-on-startup>0</load-on-startup>
  </servlet>

  <servlet>
    <description>
      Servlet that receives callback requests for Google Checkout
    </description>
    <display-name>CheckoutCallbackServlet</display-name>
    <servlet-name>CheckoutCallbackServlet</servlet-name>
    <servlet-class>
      com.google.checkout.web.CheckoutMessageHandlerServlet
    </servlet-class>
    <init-param>
      <param-name>handler-type</param-name>
      <param-value>callback-handler</param-value>
    </init-param>
    <load-on-startup>0</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>CheckoutCallbackHandlerServlet</servlet-name>
    <servlet-class>com.google.checkout.web.CheckoutCallbackHandlerServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CheckoutNotificationHandlerServlet</servlet-name>
    <servlet-class>com.google.checkout.web.CheckoutNotificationHandlerServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>CheckoutNotificationServlet</servlet-name>
    <url-pattern>/notification</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>CheckoutCallbackServlet</servlet-name>
    <url-pattern>/callback</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>CheckoutCallbackHandlerServlet</servlet-name>
    <url-pattern>/CheckoutCallbackHandlerServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CheckoutNotificationHandlerServlet</servlet-name>
    <url-pattern>/CheckoutNotificationHandlerServlet</url-pattern>
  </servlet-mapping>

  <!-- location of configuration file for checkout with respect to context 
    root. Using the default path here. -->
  <context-param>
    <param-name>checkout-config-file</param-name>
    <param-value>/WEB-INF/checkout-config.xml</param-value>
  </context-param>

  <listener>
    <description>
      Servlet context listener that configures some needed context attributes
    </description>
    <listener-class>com.google.checkout.web.ConfigurationListener</listener-class>
  </listener>
  <!-- End: Configuration for Google checkout message processing -->
</web-app>
